<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient -->
    <gradient
        android:startColor="#4CAF50"
        android:endColor="#388E3C"
        android:angle="270"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#ffffff"/>

    <!-- Rounded corners -->
    <corners
        android:radius="16dp"/>

    <!-- Drop shadow -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
    <solid android:color="@android:color/white" />
    <corners
        android:radius="16dp"/>
</shape>
